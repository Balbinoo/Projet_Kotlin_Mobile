<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Optional: Border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional: Shadow (elevation in code is better for modern apps) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
