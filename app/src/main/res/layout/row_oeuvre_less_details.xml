<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/r_oeuvre_txv_id_exposition"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="lupertz2022"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/r_oeuvre_img_PhotoUrl2"
        app:layout_constraintTop_toBottomOf="@+id/r_oeuvre_txv_titre"
        tools:text="lupertz2022" />

    <TextView
        android:id="@+id/r_oeuvre_txv_id_oeuvre"
        android:layout_width="88dp"
        android:layout_height="19dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="lupertz2022-4"
        app:layout_constraintStart_toEndOf="@+id/r_oeuvre_txv_id_exposition"
        app:layout_constraintTop_toBottomOf="@+id/r_oeuvre_txv_titre"
        tools:text="lupertz2022-4" />

    <TextView
        android:id="@+id/r_oeuvre_txv_titre"
        android:layout_width="215dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="Achille"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/r_oeuvre_img_PhotoUrl2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Achille" />

    <TextView
        android:id="@+id/r_oeuvre_txv_annee"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:text="2014"
        app:layout_constraintStart_toEndOf="@+id/r_oeuvre_img_PhotoUrl2"
        app:layout_constraintTop_toBottomOf="@+id/r_oeuvre_txv_titre" />

    <ImageView
        android:id="@+id/r_oeuvre_img_PhotoUrl2"
        android:layout_width="167dp"
        android:layout_height="167dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/r_oeuvre_btn_details"
        android:layout_width="404dp"
        android:layout_height="166dp"
        android:textColorLink="#00000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>