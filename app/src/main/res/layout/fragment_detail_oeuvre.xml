<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_fragment_detail_oeuvre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/r_detail_id_exposition"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:text="lupertz2022"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="lupertz2022" />

    <TextView
        android:id="@+id/r_detail_id_oeuvre"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="lupertz2022-4"
        app:layout_constraintEnd_toStartOf="@+id/r_detail_titre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_detail_id_exposition"
        tools:text="lupertz2022-4" />

    <TextView
        android:id="@+id/r_detail_titre"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="52dp"
        android:text="Achille"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_detail_id_exposition"
        tools:text="Achille" />

    <TextView
        android:id="@+id/r_detail_annee"
        android:layout_width="91dp"
        android:layout_height="15dp"
        android:layout_marginTop="80dp"
        android:text="2014"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_detail_id_exposition" />

    <ImageView
        android:id="@+id/r_detail_img_PhotoUrl"
        android:layout_width="159dp"
        android:layout_height="179dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_detail_id_exposition"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>